using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Aplikacja0
{
    class Program
    {
        static void Main(string[] args)
        {
            const float PI = 3.14F; // stała

            //Całkowite
            sbyte zmienna5 = sbyte.MinValue;
            byte zmienna2 = byte.MaxValue;
            short zmienna3 = short.MaxValue; // jest domyślnie z minusem
            ushort zmienna6 = 0; //tylko wartości dodatnie
            int zmienna = int.MaxValue;
            long zmienna4 = long.MaxValue;

            //Zmienno przecinkowe
            float zmienna7 = 1.13213F;
            double zmienna8 = 1.234234;
            decimal zmienna9 = 9.2342M;
            //tekstowe
            string zmienna10 = "1";
            char zmienna11 = 'a';

            var zmienna14 = zmienna11; // var dostosowuje się do zmiennej jaką ma ta druga

            //logiczne
            bool zmienna12 = true;
            bool zmienna13 = false;

            bool zmienna14 = 5 > 2;
            Console.WriteLine(zmienna14);
            Console.WriteLine(zmienna2 + zmienna3);
            //Console.WriteLine("Hello World!");
            Console.ReadKey();

        }
    }
}
